{
    "name": "renfordt/colors",
    "description": "A php library to convert and modify colors.",
    "type": "library",
    "require": {
        "php": "^8.1",
        "renfordt/clamp": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^2.1",
        "rector/rector": "^2.0",
        "symfony/var-dumper": "^7.2",
        "laravel/pint": "^1.19"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Renfordt\\Colors\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Jannik Renfordt",
            "email": "jannik.renfordt@ikobb.de"
        }
    ],
    "minimum-stability": "stable",
    "scripts": {
        "refacto": "rector",
        "lint": "pint",
        "test:refacto": "rector --dry-run",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "phpunit",
        "test": [
            "@test:refacto",
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
